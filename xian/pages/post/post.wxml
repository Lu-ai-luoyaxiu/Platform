<!--pages/post/post.wxml-->
<view class="all">
<form bindsubmit="sumbitPost">
<!-- 帖子内容 -->
<view class="content" >
<view class="text">
<textarea bindblur="bindTextAreaBlur" auto-height  maxlength="1000" placeholder="选最棒的图片作为主图，作品更容易被推荐哦!" name="textarea"/>
</view>
<!-- 添加图片 -->
<view class="image" bindtap="upload">
<image src="../../images/发布.png"></image>
<text>图片/视频</text>
</view>
</view>
<!-- 其他 -->
<view class="other">
<view class="picture cate" catchtap="upload">
<image src="../../images/相册.png"></image>
<text>相册</text>
</view>
<view class="topic cate">
<image src="../../images/话题.png"></image>
<text>话题</text>
</view>
<view class="treasure cate">
<image src="../../images/购物.png"></image>
<text>添加宝贝</text>
</view>
<view class="pobtn">
<button id="btn">发布</button>
</view>
</view>

</form>
</view>
