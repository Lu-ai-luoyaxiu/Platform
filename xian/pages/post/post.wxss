/* pages/post/post.wxss */
page{
  width:100%;
  height:100%;
  background-color: #ffffff;
  padding: 0%;
}
.all{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
  overflow:hidden;
}
.content{
  width:100%;
  flex:1;
  display: flex;
  flex-direction: column;
  margin:30rpx auto;
  margin-left:30rpx;
}
.text{
  flex:1;
  color:#b3b3b3;
}
.image{
  margin-top:30rpx;
  width:200rpx;
  height:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f2f2f2;
  color:#aeaeae;
  font-size:30rpx;
 
}
.image image{
  height:50rpx;
  width:50rpx;
}
.other{
  padding: 0%;
  position: fixed;
  bottom: 0;
  width:100%;
  height:100rpx;
  display: flex;
  border-top:2rpx solid #e7e7e7;
  color:#888888;
  font-size: 30rpx;

  overflow: hidden;
}
.cate{
  width:150rpx;
  height:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cate image{
height:50rpx;
width:50rpx;
}
.pobtn{
  flex:1;
  height:100rpx;
  margin-top:10rpx;
  right: 10prx;
  overflow: hidden;
}
#btn{
  padding:0;
  width:150rpx;
  height:80rpx;
  border-radius: 40rpx 40rpx;
  font-size: 30rpx;
  align-items: center;
  line-height: 100rpx;
  background-color:#f9e60e;
  color:#0a0500;
}